<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="vehicle1" class="com.sapient.models.Vehicle" scope="prototype">
<!-- DI -->
    <constructor-arg index="0" name="regNo" value="TN-02-3457"></constructor-arg>
    <constructor-arg index="1" name="make" value="Honda"></constructor-arg>
    <constructor-arg index="2" name="color" value="Maroon"></constructor-arg>
    <constructor-arg index="3" name="cost" value="1200000"></constructor-arg>
    <constructor-arg index="4" name="dop" ref="date"></constructor-arg>
</bean>
    <bean id="vehicle2" class="com.sapient.models.Vehicle" scope="prototype">
        <!-- DI -->
        <constructor-arg index="0" name="regNo" value="TN-12-13457"></constructor-arg>
        <constructor-arg index="1" name="make" value="XUV 700"></constructor-arg>
        <constructor-arg index="2" name="color" value="Navy Blue"></constructor-arg>
        <constructor-arg index="3" name="cost" value="2700000"></constructor-arg>
        <constructor-arg index="4" name="dop" ref="date"></constructor-arg>
    </bean>

<bean id="date" class="java.util.Date">
    <constructor-arg index="0" value="122"></constructor-arg>
    <constructor-arg index="1" value="01"></constructor-arg>
    <constructor-arg index="2" value="27"></constructor-arg>
</bean>

<bean id="owner" class="com.sapient.models.Owner">
    <property name="ownerName" value="Parameswari"></property>
    <property name="mobileNo" value="9952032862"></property>
    <property name="vehicleList">
        <list>
            <ref bean="vehicle1"></ref>
            <ref bean="vehicle2"></ref>
        </list>
    </property>

</bean>

</beans>